<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="15dp"
        tools:context=".complaint">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/logindiv"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/logindiv"
                android:orientation="horizontal">

                <!--            <EditText-->
                <!--                android:id="@+id/document"-->
                <!--                android:layout_width="200dp"-->
                <!--                android:layout_height="match_parent"-->
                <!--                android:layout_gravity="center"-->
                <!--                android:background="@drawable/textbox"-->
                <!--                android:hint="Choose doc."-->
                <!--                android:inputType="text"-->
                <!--                android:textSize="19sp" />-->

                <Button
                    android:id="@+id/uploadButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:backgroundTint="#A3CDCDCD"
                    android:text="Upload File"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/fileName"
                    android:textSize="15sp"
                    android:text="Filename.jpg"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/Details"
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/textbox"
                android:backgroundTint="@color/white"
                android:ems="20"
                android:gravity="top|start"
                android:hint="Complaint Details.."
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="10"
                android:minLines="6"
                android:padding="8dp"
                android:scrollbars="vertical"
                android:textSize="19sp" />

            <ImageButton
                android:id="@+id/mic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginTop="-40dp"
                android:src="@drawable/mic" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLocation"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/textbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/textbox"
                        android:hint="Location"
                        android:paddingEnd="90dp"
                        android:singleLine="true"
                        android:textSize="17sp" />
                    <ImageButton
                        android:id="@+id/livelocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-90dp"
                        android:layout_marginTop="20dp"
                        android:background="#00FFFFFF"
                        android:src="@drawable/baseline_location_on_24" />
                </LinearLayout>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputNearestPS"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/textbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/nearestPS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/textbox"
                        android:hint="Nearest Police Station"
                        android:paddingEnd="60dp"
                        android:singleLine="true"
                        android:textSize="17sp" />
                    <ImageButton
                        android:id="@+id/nearestPSbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-60dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="20dp"
                        android:background="#00FFFFFF"
                        android:src="@drawable/policeman_icon" />
                </LinearLayout>
            </com.google.android.material.textfield.TextInputLayout>
<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="left"-->
<!--                android:layout_marginTop="30dp"-->
<!--                android:background="@drawable/logindiv"-->
<!--                android:backgroundTint="@color/black"-->
<!--                android:orientation="horizontal">-->



<!--                <ImageButton-->
<!--                    android:id="@+id/nearestpolice"-->
<!--                    android:layout_width="50dp"-->
<!--                    android:layout_height="50dp"-->
<!--                    android:layout_marginLeft="230dp"-->
<!--                    android:layout_marginRight="5dp"-->
<!--                    android:scaleType="fitCenter"-->
<!--                    android:src="@drawable/police" />-->
<!--            </LinearLayout>-->


            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:backgroundTint="#5B279700"
                android:padding="6dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textSize="17sp" />
        </LinearLayout>
    </FrameLayout>
</ScrollView>
