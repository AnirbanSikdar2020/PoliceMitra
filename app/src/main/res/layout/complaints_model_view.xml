<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_700"
    app:contentPadding="5dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="100"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ViewComplaint"
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name : "
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/rTitletv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details : "
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/rDescriptiontv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status : "
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/complaintsStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="status"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_weight="30"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:id="@+id/approve"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/baseline_check_24"
                />
            <ImageButton
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:id="@+id/decline"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/baseline_cancel_24"
                />
            <ImageButton
                android:layout_marginLeft="2dp"
                android:layout_gravity="center"
                android:id="@+id/download"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/baseline_download_24"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>